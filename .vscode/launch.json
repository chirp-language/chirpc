{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/chirpc",
            "args": [
                "samples/invalid.chp",
                "-dump-tokens",
                "-dump-ast"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
        }
    ]
}